<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory >
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/chat</property>
  <property name="hibernate.connection.username">phil</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.show_sql">true</property>
  <property name="hibernate.use_sql_comments">true</property>
  <property name="hibernate.format_sql">true</property>
  <property name="hibernate.default_catalog">chat</property>
  <property name="hibernate.connection.password">phil</property>
  <!-- <property name="hibernate.hbm2ddl.auto">create</property> -->
  <mapping class="pojo.Activitesalon"/>
  <mapping class="pojo.Activiteserveur"/>
  <mapping class="pojo.Administrateur"/>
  <mapping class="pojo.Adresse"/>
  <mapping class="pojo.Logsalon"/>
  <mapping class="pojo.Logserveur"/>
  <mapping class="pojo.Moderateur"/>
  <mapping class="pojo.Pays"/>
  <mapping class="pojo.Salon"/>
  <mapping class="pojo.Serveur"/>
  <mapping class="pojo.Typeactivitesalon"/>
  <mapping class="pojo.Typeactiviteserveur"/>
  <mapping class="pojo.Typesalon"/>
  <mapping class="pojo.User"/>
 </session-factory>
</hibernate-configuration>
